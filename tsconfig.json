{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"moduleResolution": "node",
		"declaration": false,
		"noImplicitAny": false,
		"jsx": "react",

		"sourceMap": true,
		"noLib": false,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true
	},
	"compileOnSave": false,
	"exclude": ["node_modules"]
}
